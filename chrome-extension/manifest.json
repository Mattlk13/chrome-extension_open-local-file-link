{
	"name": "ローカルファイルリンク有効化",
	"version": "0.2",
	"manifest_version": 2,
	"description": "Chromeで無効にされているローカルファイルへのリンクをクリックで開けるようにする",
	"icons": {
		"128": "icon/icon.png"
	},
	"permissions": [
		"*://*/*"
	],
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [{
		"matches": [
			"*://*/*"
		],
		"js": [
			"content_script.js"
		]
	}],
	"minimum_chrome_version": "46.0"
}